<Window x:Class="WpfSplashScreen.xSplashForm1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="xSplashForm1" Height="353" Width="424" Icon="Media/twitter follow me.ico" WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterScreen">
    <Window.BorderBrush>
        <ImageBrush ImageSource="Media/dont.png"/>
    </Window.BorderBrush>
    <Grid RenderTransformOrigin="0.516,0.493">
        <Grid.Background>
            <ImageBrush ImageSource="Media/dont.png"/>
        </Grid.Background>
        <Button  Name="xCloseButtonForm1" BorderBrush="Transparent" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="54" Height="49" Click="xCloseButtonForm1_Click">
            <Button.Background>
                <ImageBrush ImageSource="Media/Down.png"/>
            </Button.Background>
        </Button>
        <Button Name="xPlayButtomForm1" BorderBrush="Transparent" HorizontalAlignment="Left" Margin="69,10,0,0" VerticalAlignment="Top" Width="53" Height="49" Click="xPlayButtomForm1_Click">
            <Button.Background>
                <ImageBrush ImageSource="Media/Media_Player_alt.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
